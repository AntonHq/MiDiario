<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambiarDatos">

    <ImageButton
        android:id="@+id/btnAyuda"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/ayuda"
        android:contentDescription="ayuda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/lnLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:id="@+id/Logo"
            android:layout_width="336dp"
            android:layout_height="78dp"
            android:fontFamily="@font/satisfy_regular"
            android:text="Ajustes."
            android:textAlignment="center"
            android:textSize="55sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/poppins_light"
            android:text="Cambia tu nombre o contraseña."
            android:textSize="17sp" />

        <EditText
            android:id="@+id/txtCorreor"
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Tu nombre"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtContraseñar"
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Tu contraseña"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/colorPrimary"
            android:text="Guardar cambios"
            android:textSize="16sp" />

        <Space
            android:layout_width="3dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/lnLy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:layout_width="3dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnLy" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>