<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingHorizontal="70dp"
    tools:context=".Menu">

    <LinearLayout
        android:id="@+id/lnLy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/Logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/satisfy_regular"
                android:textColor="@color/text"
                android:text="Mi Diario."
                android:textAlignment="center"
                android:textSize="70sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"
                android:text="¡Bienvenido de nuevo!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"
                android:text="Elige una opción para continuar." />

            <Button
                android:id="@+id/btnNuevo"
                android:layout_width="229dp"
                android:layout_height="69dp"
                android:textColor="@color/background"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/text"
                android:text="PÁGINA NUEVA"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnTodo"
                android:layout_width="229dp"
                android:layout_height="69dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/text"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/colorBtnSecundario"
                android:text="TODAS MIS PÁGINAS"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnAjustes"
                android:layout_width="229dp"
                android:layout_height="69dp"
                android:textColor="@color/background"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/text"
                android:text="AJUSTES"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lnLy" />

    <Space
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnLy"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
