<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newUser">

    <LinearLayout
        android:id="@+id/lnLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:fontFamily="@font/satisfy_regular"
            android:text="Mi Diario."
            android:textAlignment="center"
            android:textSize="70sp"
            android:layout_marginEnd="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="¡Bienvenido!\nComencemos creando tu nueva cuenta."
                android:textSize="17sp" />

            <EditText
                android:id="@+id/txtUsuarior"
                android:layout_width="349dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="Nombre de Usuario" />

            <EditText
                android:id="@+id/txtCorreor"
                android:layout_width="349dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="Correo"
                android:inputType="text" />

            <EditText
                android:id="@+id/txtContraseñar"
                android:layout_width="349dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="Contraseña"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txtConfiContraseñar"
                android:layout_width="349dp"
                android:layout_height="48dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="Confirmar Contraseña"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/lblErrorr"
                android:layout_width="349dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_regular"
                android:padding="5dp"
                android:text="TextView"
                android:textColor="@color/error"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:text="Guardar"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
